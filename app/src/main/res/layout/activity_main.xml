<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_back">

<RelativeLayout

    android:layout_marginRight="41dp"
    android:layout_marginLeft="41dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш логин"
        android:id="@+id/tvLogin"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"/>

    <EditText
        android:background="@drawable/editback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etLogin"
        android:layout_below="@+id/tvLogin"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="Ваш пароль"
        android:layout_below="@+id/etLogin"
        android:id="@+id/tvPass"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"/>

    <EditText
        android:background="@drawable/editback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPas"
        android:layout_below="@+id/tvPass"/>

    <LinearLayout
        android:layout_below="@+id/etPas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:background="@drawable/bt_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btRec"
            android:layout_below="@+id/etPas"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btLog"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/btRec"
            android:background="@drawable/bt_in"/>
    </LinearLayout>
</RelativeLayout>



</RelativeLayout>
